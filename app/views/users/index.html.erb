<div class="container">
  <h2>ユーザー一覧</h2>

  <% @users.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
      <div class="col-md-2">
        <%= profile_img(user) %>
        <%= link_to user.name, user %>
        <%= user.email %>
        <%= render 'follow_form', user: user %>
      </div>
    </div>
  <% end %>

</div>