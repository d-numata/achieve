<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <div class="row">
          <%= profile_img(user) %>
        </div>
        <div class="row">
          <%= link_to user.name, user %>
        </div>
        <div class="row">
          <%= user.email %>
        </div>
        <div class="row">
          <%= render 'follow_form', user: user %>
      </div>
  <% end %>
</div>